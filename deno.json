{
  "tasks": {
    "cron:publish": "deno --allow-read --allow-env --allow-net crons/publish/main.ts",
    "cron:publish:dev": "deno --env-file --allow-read --allow-env --allow-net --watch crons/publish/main.ts"
  },
  "fmt": {
    "singleQuote": true
  },
  "workspace": ["packages/*", "crons/*"],
  "imports": {
    "@grammyjs/types": "npm:@grammyjs/types@^3.18.0",
    "grammy": "npm:grammy@^1.34.1"
  }
}
